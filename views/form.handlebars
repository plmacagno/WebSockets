<section class="p-4 bg-secondary bg-opacity-25">
	<h2 class="text-primary">Ingrese Producto</h2>
	<form id="form-add-product">
		<div class='mb-3'>
			<label class='form-label fw-bold' for='name'>Nombre</label>
			<input id="name-product" class="form-control" type='text' name='name' />
		</div>
		<div class='mb-3'>
			<label class='form-label fw-bold' for='price'>Precio</label>
			<input id="price-product" class="form-control" type='number' name='price' />
		</div>
		<div class='mb-3'>
			<label class='form-label fw-bold' for='img'>Foto URL</label>
			<input id="img-product" class="form-control" type='url' name='img' />
		</div>
		<div class='mb-3'>
			<input class="btn btn-success" type='submit' value='Enviar' />
		</div>
	</form>
</section>
<section class="p-4 bg-secondary bg-opacity-25">
	<h2 class="text-primary">Vista de Productos</h2>
	{{#if products}}
	<table class="table table-dark">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Precio</th>
				<th>Foto</th>
			</tr>
		</thead>
		<tbody class"align-middle" id="table-products"></tbody>
	</table>
	{{else}}
	<h2 class="bg-light p-4 text-danger">No hay productos listados</h2>
	{{/if}}
</section>
<section class="p-4 bg-secondary bg-opacity-25">
	<h2 class="text-primary mb-4" >Centro de Mensajes</h2>
	<div class="ui container">
      <div class="ui grid">
       
        <div class="ten wide column">
          <div class="card">
            <div class="ui container">
             
              <div class="ui form">
                <div class="field">
					<div>
                 		 <label><b>Usermail: </b></label>
				 	 </div>
					 <div>
                 		 <input type="email" name="nombre" id="nombre" placeholder="Ingresa tu email"/>
                	</div>
				</div>
				<div class="ui form"></div>
                	<div class="field">	
						<div>
                 	 		<label><b>Mensaje: </b></label>
						</div>
						<div>
                  			<textarea name="mensaje" id="mensaje" ROWS="5" COLS="50" placeholder="Ingresa tu mensaje"></textarea>
                		</div>
					</div>
               		<div class="field">
                 		 <button class="btn btn-success" onclick="enviarMensaje()">
                   		 <i class="send icon "></i>
                   		 Enviar
                  		</button>
				 	</div>
			  </div>		 
              </div>
            </div>
          </div>
        </div>
		<div class="ui container">
		 	<div class="six wide column">
          
			
           	 <h3 class="text-primary mb-4">Mensajes</h3>
           	 <div id="posts"></div>
        	</div>
        
     
	  	</div>
	  </div>
    </div>
</section>